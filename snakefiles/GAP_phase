rule rm_duplicates_in_split_bams:
    """
    This removes duplicates for chicago, illumina, and hi-c using sambamba.

    Sambamba markdup is faster than Picard and removes duplicates by default with -r flag.
    Uses multiple threads for better performance.
    
    Performance optimization: Copy to local disk first, process there, then copy back.
    This dramatically improves I/O performance compared to processing on network storage.
    """
    input:
        bam = config["tool"] + "/output/bams/split/{libtype}.REF_{chrom}.bam",
        sambamba = os.path.join(filepath, "../bin/sambamba")
    output:
        bam = config["tool"] + "/output/bams/split_rmdups/{libtype}.REF_{chrom}.rmdups.bam"
    threads: 4
    resources:
        mem_mb  = 8000,
        runtime = lambda wildcards, input: get_sambamba_markdup_runtime(wildcards, input)
    shell:
        """
        set -euo pipefail
        
        # Use TMPDIR if set, otherwise use /tmp
        LOCALDIR=${{TMPDIR:-/tmp}}/sambamba_$$_{wildcards.libtype}_{wildcards.chrom}
        mkdir -p $LOCALDIR
        
        # Copy input to local disk
        echo "Copying input BAM to local disk: $LOCALDIR"
        LOCAL_INPUT=$LOCALDIR/input.bam
        cp {input.bam} $LOCAL_INPUT
        
        # Process on local disk
        echo "Running sambamba markdup on local disk"
        LOCAL_OUTPUT=$LOCALDIR/output.bam
        {input.sambamba} markdup -r -t {threads} $LOCAL_INPUT $LOCAL_OUTPUT
        
        # Copy result back to network storage
        echo "Copying output BAM back to network storage"
        cp $LOCAL_OUTPUT {output.bam}
        
        # Clean up local temp files
        rm -rf $LOCALDIR
        """

rule index_rmdup_bams:
    input:
        bam = config["tool"] + "/output/bams/split_rmdups/{libtype}.REF_{chrom}.rmdups.bam",
    output:
        bai = config["tool"] + "/output/bams/split_rmdups/{libtype}.REF_{chrom}.rmdups.bam.bai",
    threads: 1
    resources:
        mem_mb  = 2000,
        runtime = 45
    shell:
        """
        samtools index {input.bam}
        """

