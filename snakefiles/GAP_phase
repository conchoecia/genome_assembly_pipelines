    output:
        vcf = config["tool"] + "/output/{vcfname}/final_output/complete_assembly.hap.phased.vcf.gz",
        tbi = config["tool"] + "/output/{vcfname}/final_output/complete_assembly.hap.phased.vcf.gz.tbi"
    threads: 1
