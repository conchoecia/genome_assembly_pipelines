        cat {input.hap} | gzip > {output.gzipped}
        """

########################################################################
#    Now split this into different chromosomes and make the final table
########################################################################


rule make_table_of_final_output:
    """
    This makes a table of the results from phasing. Useful for plotting.
    The columns included are:
      - chrom (the name from the fasta header)
      - chrom_length (the sequence length)
      - largest_pb_start (1-based start index for the largest phase block)
      - largest_pb_stop  (1-based stop index for the largest phase block)
      - largest_pb_length (the size of the largest phase block)
      - largest_pb_num_var (the number of variants in the largest phase block)
      - largest_pb_num_phased (the number of phased variants in the largest phase block)
    """
    input:
        txt   = config["tool"] + "/output/{vcfname}/final_output/hapcut_largest_blocks_per_sca.txt",
        vcfgz = config["tool"] + "/output/{vcfname}/final_output/largest_blocks.hap.phased.vcf.gz",
        tbi   = config["tool"] + "/output/{vcfname}/final_output/largest_blocks.hap.phased.vcf.gz.tbi",
        ref   = config["tool"] + "/input/assembly/input.fasta"
    output:
        txt = config["tool"] + "/output/{vcfname}/final_output/hapcut_largest_block_final_table.txt"
    threads: 1
    resources:
        mem_mb=2000, runtime=30
    run:
        import subprocess
        from Bio import SeqIO
        from contextlib import ExitStack

        chrom_to_length = {}

        with ExitStack() as stack:
            ref_handle  = stack.enter_context(open(input.ref, "r"))
            out_handle  = stack.enter_context(open(output.txt, "w"))
            txt_handle  = stack.enter_context(open(input.txt, "r"))

            # chrom sizes from FASTA
            for record in SeqIO.parse(ref_handle, "fasta"):
                chrom_to_length[record.id] = len(record.seq)

            print("\t".join([
                "chrom","chrom_length","largest_pb_start","largest_pb_stop",
                "largest_pb_length","percent_of_chrom_in_largest_pb",
                "largest_pb_num_var","largest_pb_num_phased","percent_of_vars_phased"
            ]), file=out_handle)

            for raw in txt_handle:
                line = raw.strip()
                if not line:
                    continue

                splitd = line.split("\t")
                chrom = splitd[0]
                chrom_length = chrom_to_length[chrom]

                # Use tabix/bcftools random access to fetch first/last POS
                cmd_base   = f"bcftools view -r {chrom} -H {input.vcfgz} | cut -f2"
                start_str  = subprocess.check_output(f"{cmd_base} | head -n1", shell=True, text=True).strip()
                stop_str   = subprocess.check_output(f"{cmd_base} | tail -n1", shell=True, text=True).strip()

                largest_pb_start = int(start_str) if start_str else 0
                largest_pb_stop  = int(stop_str)  if stop_str  else 0
                largest_pb_length = max(0, largest_pb_stop - largest_pb_start + 1)

                largest_pb_num_var    = int(splitd[2].split()[4])
                largest_pb_num_phased = int(splitd[2].split()[6])

                percent_of_chrom_in_largest_pb = f"{(largest_pb_length/chrom_length)*100:.4f}" if chrom_length else "0.0000"
                percent_of_vars_phased = f"{(largest_pb_num_phased/largest_pb_num_var)*100:.2f}" if largest_pb_num_var else "0.00"

                print("\t".join(map(str, [
                    chrom,
                    chrom_length,
                    largest_pb_start,
                    largest_pb_stop,
                    largest_pb_length,
                    percent_of_chrom_in_largest_pb,
                    largest_pb_num_var,
                    largest_pb_num_phased,
                    percent_of_vars_phased
                ])), file=out_handle)

########################################################################
#    Now we use WhatsHap to haplotag the Hi-C and long reads
########################################################################

rule split_phased_into_individual_chromosomes:
    input:
        final_gz = config["tool"] + "/output/{vcfname}/final_output/largest_blocks.hap.phased.vcf.gz",
        final_in = config["tool"] + "/output/{vcfname}/final_output/largest_blocks.hap.phased.vcf.gz.tbi"
    output:
        chromgz = config["tool"] + "/output/{vcfname}/final_output/phased_by_chromosome/largest_blocks.hap.phased.{chrom}.vcf.gz"
    threads: 1
    resources:
        mem_mb  = 4000,
        runtime = 20
    params:
        tchrom = lambda w: w.chrom
    shell:
        """
        bcftools view -r {wildcards.chrom} -Oz -o {output.chromgz} {input.final_gz}
        """

rule index_vcf_individual_chromosomes:
    input:
        chromgz = config["tool"] + "/output/{vcfname}/final_output/phased_by_chromosome/largest_blocks.hap.phased.{chrom}.vcf.gz"
    output:
        index   = config["tool"] + "/output/{vcfname}/final_output/phased_by_chromosome/largest_blocks.hap.phased.{chrom}.vcf.gz.tbi"
    threads: 1
    resources:
        mem_mb  = 4000,
        runtime = 20
    params:
        tchrom = lambda w: w.chrom
    shell:
        """
        tabix -p vcf {input.chromgz}
        """

def bam_size_mb(path: str) -> int:
    try:
        return max(1, int(Path(path).stat().st_size // (1024*1024)))
    except FileNotFoundError:
        return 1

def mem_for_bam_mb(path: str, floor=8000, ceil=65536, pct=0.10, base=1024) -> int:
    """Generic scaler: base + pct * size (MB), clamped."""
    mb = bam_size_mb(path)
    return int(max(floor, min(ceil, base + pct * mb)))

def mem_for_hic_piecewise_mb(path: str) -> int:
    """More reasonable RAM for Hi-C shards for whatshap haplotag."""
    gb = bam_size_mb(path) / 1024
    if gb <= 5:   return 16000   # 16 GB
    if gb <= 10:  return 24000   # 24 GB
    if gb <= 20:  return 32000   # 32 GB
    if gb <= 30:  return 40000   # 40 GB
    if gb <= 40:  return 48000   # 48 GB
    if gb <= 60:  return 64000   # 64 GB
    if gb <= 80:  return 80000   # 80 GB
    return 96000                 # safety cap at 96 GB

def mem_for_libtype_mb(libtype: str, path: str) -> int:
    """Hi-C uses piecewise; long reads get a modest scaler; others lighter."""
    lt = (libtype or "").lower()
    if lt == "hic":
        return mem_for_hic_piecewise_mb(path)
    if lt in {"hifi","pb","pacbio","ont","nanopore","clr","ul"}:
        # Long reads: slightly higher floor and slope than Illumina
        return mem_for_bam_mb(path, floor=12000, ceil=98304, pct=0.15, base=1024)
    # Illumina/other: lighter defaults
    return mem_for_bam_mb(path, floor=8000, ceil=65536, pct=0.10, base=512)

def runtime_for_bam_min(path: str, base=20, per_gb=1.0, ceil=600) -> int:
    size_gb = bam_size_mb(path) / 1024
    return int(max(base, min(ceil, base + per_gb * size_gb)))

rule haplotag_reads_chrom:
    input:
        bam    = config["tool"] + "/output/bams/split/{libtype}.REF_{chrom}.bam",
        bai    = config["tool"] + "/output/bams/split/{libtype}.REF_{chrom}.bam.bai",
        vcfgz  = config["tool"] + "/output/{vcfname}/final_output/phased_by_chromosome/largest_blocks.hap.phased.{chrom}.vcf.gz",
        vcfin  = config["tool"] + "/output/{vcfname}/final_output/phased_by_chromosome/largest_blocks.hap.phased.{chrom}.vcf.gz.tbi",
        # index may not exist for empty shard; keep optional in logic
        ref    = config["tool"] + "/input/assembly/input.fasta",
        fai    = config["tool"] + "/input/assembly/input.fasta.fai"
    output:
        bam = config["tool"] + "/output/{vcfname}/final_output/haplotagged_by_chrom/{libtype}.REF_{chrom}.haplotagged.bam",
        bai = config["tool"] + "/output/{vcfname}/final_output/haplotagged_by_chrom/{libtype}.REF_{chrom}.haplotagged.bam.bai"
    threads: 1
    resources:
        # Bigger floor for Hi-C, modest floor for others
        mem_mb  = lambda wc, input: mem_for_libtype_mb(wc.libtype, input.bam),
        runtime = lambda wc, input: runtime_for_bam_min(input.bam, base=45, per_gb=10, ceil=2160),
        slurm_cpus_per_task = lambda wc, threads: threads,
    shell:
        """
        set -euo pipefail

        # Empty or invalid BAM shard? Emit header-only BAM.
        if ! samtools quickcheck -v {input.bam} >/dev/null 2>&1 || \
           [ "$(samtools view -c {input.bam})" -eq 0 ]; then
            echo "[haplotag_reads_chrom] {wildcards.chrom}: empty BAM shard; writing header-only BAM."
            samtools view -H {input.bam} | samtools view -b -o {output.bam} -
            samtools index -@ {threads} {output.bam}
            exit 0
        fi

        # No variants in this VCF shard? Just pass the BAM through unchanged.
        if [ "$(bcftools view -H {input.vcfgz} | wc -c)" -eq 0 ]; then
            echo "[haplotag_reads_chrom] {wildcards.chrom}: no variants; copying BAM shard."
            cp -p {input.bam} {output.bam}
            if [ -f {input.bai} ]; then cp -p {input.bai} {output.bai}; else samtools index -@ {threads} {output.bam}; fi
            exit 0
        fi

        # Otherwise, haplotag normally.
        whatshap haplotag \
            -o {output.bam} \
            --reference {input.ref} \
            --ignore-read-groups \
            --ploidy 2 \
            --output-threads {threads} \
            {input.vcfgz} \
            {input.bam}

        samtools index -@ {threads} {output.bam}
        """


def total_bam_size_mb(paths) -> int:
    tot = 0
    for p in paths:
        try: tot += int(Path(p).stat().st_size // (1024*1024))
        except FileNotFoundError: pass
    return max(1, tot)

def runtime_for_merge_minutes(libtype: str, paths,
                              hic_base=45, hic_per_gb=1.2, hic_ceil=2160,
                              pb_base=45,  pb_per_gb=0.8,  pb_ceil=720) -> int:
    gb = total_bam_size_mb(paths) / 1024
    lt = (libtype or "").lower()
    if lt == "hic":
        return int(min(hic_ceil, max(hic_base, hic_base + hic_per_gb * gb)))
    # PacBio / long reads default
    return int(min(pb_ceil, max(pb_base, pb_base + pb_per_gb * gb)))

rule merge_haplotagged:
    input:
        bams = expand(config["tool"] + "/output/{{vcfname}}/final_output/haplotagged_by_chrom/{{libtype}}.REF_{chrom}.haplotagged.bam",
               chrom=config["CHROMS"])
    output:
        bam = config["tool"] + "/output/{vcfname}/final_output/{libtype}_haplotagged.bam"
    threads: 8
    resources:
        mem_mb  = 8000,  # merge is light on RAM
        runtime = lambda wc, input: runtime_for_merge_minutes(wc.libtype, input.bams)
    shell:
        """
        samtools merge -@ {threads} -o {output.bam} {input}
        """

rule index_haplotagged:
    input:
        bam = config["tool"] + "/output/{vcfname}/final_output/{libtype}_haplotagged.bam"
    output:
        bam = config["tool"] + "/output/{vcfname}/final_output/{libtype}_haplotagged.bam.bai"
    threads: 1
    resources:
        mem_mb=8000,
        runtime = lambda wc, input: runtime_for_bam_min(input.bam, base=15, per_gb=1.5, ceil=600)
    shell:
        """
        samtools index -@ {threads} {input.bam}
        """

########################################################################
#    Multi-VCF Summary Report
#    Comprehensive comparison of phasing results across all VCF files
########################################################################

rule create_multi_vcf_phasing_summary:
    """
    Create comprehensive summary reports comparing phasing results across all VCF files.
    
    Generates four summary files:
    1. genome_wide_summary.txt - VCF-level aggregate statistics
    2. per_chromosome_comparison.txt - All VCF-chromosome combinations
    3. phase_block_statistics.txt - Detailed phase block metrics including N50/N90
    4. vcf_comparison.txt - Direct metric comparisons between VCFs
    
    Metrics include:
    - Genome-wide phasing coverage and variant statistics
    - Phase block quality (N50, N90, sizes from all blocks, not just largest)
    - Per-chromosome phasing statistics
    - Phasing quality scores from VCF FORMAT fields
    - Cross-VCF comparisons
    """
    input:
        tables = expand(config["tool"] + "/output/{vcfname}/final_output/hapcut_largest_block_final_table.txt",
                       vcfname=config["VCF_NAMES"]),
        haps = expand(config["tool"] + "/output/{vcfname}/final_output/complete_assembly.hap.gz",
                     vcfname=config["VCF_NAMES"]),
        vcfs = expand(config["tool"] + "/output/{vcfname}/final_output/complete_assembly.hap.phased.vcf.gz",
                     vcfname=config["VCF_NAMES"]),
        ref = config["tool"] + "/input/assembly/input.fasta"
    output:
        summary = config["tool"] + "/output/multi_vcf_summary/genome_wide_summary.txt",
        per_chrom = config["tool"] + "/output/multi_vcf_summary/per_chromosome_comparison.txt",
        block_stats = config["tool"] + "/output/multi_vcf_summary/phase_block_statistics.txt",
        comparison = config["tool"] + "/output/multi_vcf_summary/vcf_comparison.txt"
    threads: 1
    resources:
        mem_mb=8000,
        runtime=60
    run:
        import gzip
        import subprocess
        from collections import defaultdict
        from Bio import SeqIO
        
        # Get chromosome lengths from reference
        chrom_lengths = {}
        with open(input.ref, "r") as f:
            for record in SeqIO.parse(f, "fasta"):
                chrom_lengths[record.id] = len(record.seq)
        
        total_genome_size = sum(chrom_lengths.values())
        
        # Data structures to hold all metrics
        vcf_data = {}  # vcfname -> metrics dict
        per_chrom_data = []  # list of dicts for per-chromosome comparison
        
        # Process each VCF
        for vcfname, table_file, hap_file, vcf_file in zip(
            config["VCF_NAMES"], input.tables, input.haps, input.vcfs):
            
            # Initialize data structure for this VCF
            vcf_metrics = {
                'vcfname': vcfname,
                'total_genome_bp': total_genome_size,
                'chromosomes': {},
                'all_phase_blocks': []  # Will store all block sizes
            }
            
            # Parse per-chromosome table
            with open(table_file, 'r') as f:
                header = f.readline()  # Skip header
                for line in f:
                    if not line.strip():
                        continue
                    fields = line.strip().split('\t')
                    chrom = fields[0]
                    chrom_length = int(fields[1])
                    largest_pb_start = int(fields[2])
                    largest_pb_stop = int(fields[3])
                    largest_pb_length = int(fields[4])
                    percent_chrom_covered = float(fields[5])
                    num_variants = int(fields[6])
                    num_phased = int(fields[7])
                    percent_phased = float(fields[8])
                    
                    vcf_metrics['chromosomes'][chrom] = {
                        'chrom_length': chrom_length,
                        'largest_pb_start': largest_pb_start,
                        'largest_pb_stop': largest_pb_stop,
                        'largest_pb_length': largest_pb_length,
                        'percent_chrom_covered': percent_chrom_covered,
                        'num_variants': num_variants,
                        'num_phased': num_phased,
                        'percent_phased': percent_phased
                    }
                    
                    # Add to per-chromosome comparison data
                    per_chrom_data.append({
                        'vcfname': vcfname,
                        'chrom': chrom,
                        'chrom_length': chrom_length,
                        'largest_pb_length': largest_pb_length,
                        'coverage_pct': percent_chrom_covered,
                        'num_variants': num_variants,
                        'variants_phased': num_phased,
                        'phasing_rate_pct': percent_phased,
                        'variants_per_mb': (num_variants / chrom_length * 1_000_000) if chrom_length > 0 else 0,
                        'pb_start': largest_pb_start,
                        'pb_stop': largest_pb_stop,
                        'pb_span_mb': largest_pb_length / 1_000_000
                    })
            
            # Parse .hap file to get ALL phase blocks (not just largest per chromosome)
            with gzip.open(hap_file, 'rt') as f:
                current_block_positions = []
                for line in f:
                    line = line.replace('*', '').strip()
                    if not line:
                        continue
                    
                    fields = line.split()
                    if fields[0] == "BLOCK:":
                        # Save previous block if it exists
                        if current_block_positions:
                            block_size = max(current_block_positions) - min(current_block_positions) + 1
                            vcf_metrics['all_phase_blocks'].append(block_size)
                        current_block_positions = []
                    else:
                        # This is a variant line: fields[4] is position
                        try:
                            pos = int(fields[4])
                            current_block_positions.append(pos)
                        except (IndexError, ValueError):
                            continue
                
                # Don't forget the last block
                if current_block_positions:
                    block_size = max(current_block_positions) - min(current_block_positions) + 1
                    vcf_metrics['all_phase_blocks'].append(block_size)
            
            # Calculate aggregate statistics
            chroms = vcf_metrics['chromosomes']
            vcf_metrics['num_chromosomes'] = len(chroms)
            vcf_metrics['total_variants'] = sum(c['num_variants'] for c in chroms.values())
            vcf_metrics['total_phased'] = sum(c['num_phased'] for c in chroms.values())
            vcf_metrics['overall_phasing_rate'] = (
                (vcf_metrics['total_phased'] / vcf_metrics['total_variants'] * 100)
                if vcf_metrics['total_variants'] > 0 else 0
            )
            vcf_metrics['largest_pb_total_bp'] = sum(c['largest_pb_length'] for c in chroms.values())
            vcf_metrics['genome_coverage_pct'] = (
                vcf_metrics['largest_pb_total_bp'] / total_genome_size * 100
            )
            
            # Per-chromosome statistics
            coverages = [c['percent_chrom_covered'] for c in chroms.values()]
            vcf_metrics['mean_chrom_coverage'] = sum(coverages) / len(coverages) if coverages else 0
            vcf_metrics['median_chrom_coverage'] = sorted(coverages)[len(coverages)//2] if coverages else 0
            vcf_metrics['min_chrom_coverage'] = min(coverages) if coverages else 0
            vcf_metrics['max_chrom_coverage'] = max(coverages) if coverages else 0
            
            vcf_metrics['chroms_over_50pct'] = sum(1 for c in coverages if c >= 50)
            vcf_metrics['chroms_over_75pct'] = sum(1 for c in coverages if c >= 75)
            vcf_metrics['chroms_over_90pct'] = sum(1 for c in coverages if c >= 90)
            
            # Phase block statistics from ALL blocks
            blocks = sorted(vcf_metrics['all_phase_blocks'], reverse=True)
            vcf_metrics['total_phase_blocks'] = len(blocks)
            vcf_metrics['mean_block_size'] = sum(blocks) / len(blocks) if blocks else 0
            vcf_metrics['median_block_size'] = blocks[len(blocks)//2] if blocks else 0
            vcf_metrics['largest_block'] = blocks[0] if blocks else 0
            vcf_metrics['smallest_block'] = blocks[-1] if blocks else 0
            
            # Calculate N50, N90, N95
            def calculate_nx(sorted_blocks, x):
                total = sum(sorted_blocks)
                threshold = total * (x / 100)
                cumsum = 0
                for block_size in sorted_blocks:
                    cumsum += block_size
                    if cumsum >= threshold:
                        return block_size
                return 0
            
            vcf_metrics['block_n50'] = calculate_nx(blocks, 50)
            vcf_metrics['block_n90'] = calculate_nx(blocks, 90)
            vcf_metrics['block_n95'] = calculate_nx(blocks, 95)
            
            vcf_metrics['blocks_over_1mb'] = sum(1 for b in blocks if b >= 1_000_000)
            vcf_metrics['blocks_over_10mb'] = sum(1 for b in blocks if b >= 10_000_000)
            vcf_metrics['blocks_over_50mb'] = sum(1 for b in blocks if b >= 50_000_000)
            
            # Get phasing quality scores from VCF
            try:
                cmd = f"bcftools query -f '%PQ\\n' {vcf_file} 2>/dev/null"
                result = subprocess.run(cmd, shell=True, capture_output=True, text=True)
                if result.returncode == 0 and result.stdout.strip():
                    pq_scores = [int(x) for x in result.stdout.strip().split('\n') if x and x != '.']
                    if pq_scores:
                        vcf_metrics['mean_phasing_quality'] = sum(pq_scores) / len(pq_scores)
                        vcf_metrics['median_phasing_quality'] = sorted(pq_scores)[len(pq_scores)//2]
                        vcf_metrics['min_phasing_quality'] = min(pq_scores)
                        vcf_metrics['max_phasing_quality'] = max(pq_scores)
                    else:
                        vcf_metrics['mean_phasing_quality'] = vcf_metrics['median_phasing_quality'] = 'N/A'
                        vcf_metrics['min_phasing_quality'] = vcf_metrics['max_phasing_quality'] = 'N/A'
                else:
                    vcf_metrics['mean_phasing_quality'] = vcf_metrics['median_phasing_quality'] = 'N/A'
                    vcf_metrics['min_phasing_quality'] = vcf_metrics['max_phasing_quality'] = 'N/A'
            except Exception as e:
                print(f"Warning: Could not extract PQ scores for {vcfname}: {e}")
                vcf_metrics['mean_phasing_quality'] = vcf_metrics['median_phasing_quality'] = 'N/A'
                vcf_metrics['min_phasing_quality'] = vcf_metrics['max_phasing_quality'] = 'N/A'
            
            vcf_data[vcfname] = vcf_metrics
        
        # Write output file 1: Genome-wide summary
        with open(output.summary, 'w') as f:
            f.write('\t'.join([
                'vcf_name', 'total_genome_bp', 'largest_pb_total_bp', 'genome_coverage_pct',
                'total_variants', 'variants_phased', 'phasing_rate_pct', 'num_chromosomes',
                'pb_n50', 'pb_n90', 'pb_n95', 'largest_single_pb', 'median_pb_size', 'mean_pb_size',
                'mean_chrom_coverage_pct', 'median_chrom_coverage_pct',
                'chroms_over50pct', 'chroms_over75pct', 'chroms_over90pct',
                'total_phase_blocks', 'blocks_over_1mb', 'blocks_over_10mb', 'blocks_over_50mb',
                'mean_phasing_quality', 'median_phasing_quality'
            ]) + '\n')
            
            for vcfname in config["VCF_NAMES"]:
                m = vcf_data[vcfname]
                f.write('\t'.join(map(str, [
                    vcfname, m['total_genome_bp'], m['largest_pb_total_bp'],
                    f"{m['genome_coverage_pct']:.2f}",
                    m['total_variants'], m['total_phased'],
                    f"{m['overall_phasing_rate']:.2f}",
                    m['num_chromosomes'],
                    m['block_n50'], m['block_n90'], m['block_n95'],
                    m['largest_block'], m['median_block_size'], int(m['mean_block_size']),
                    f"{m['mean_chrom_coverage']:.2f}",
                    f"{m['median_chrom_coverage']:.2f}",
                    m['chroms_over_50pct'], m['chroms_over_75pct'], m['chroms_over_90pct'],
                    m['total_phase_blocks'], m['blocks_over_1mb'], m['blocks_over_10mb'],
                    m['blocks_over_50mb'],
                    m['mean_phasing_quality'] if isinstance(m['mean_phasing_quality'], str) else f"{m['mean_phasing_quality']:.2f}",
                    m['median_phasing_quality']
                ])) + '\n')
        
        # Write output file 2: Per-chromosome comparison
        with open(output.per_chrom, 'w') as f:
            f.write('\t'.join([
                'vcf_name', 'chrom', 'chrom_length', 'largest_pb_length', 'coverage_pct',
                'num_variants', 'variants_phased', 'phasing_rate_pct', 'variants_per_mb',
                'pb_start', 'pb_stop', 'pb_span_mb'
            ]) + '\n')
            
            for row in per_chrom_data:
                f.write('\t'.join(map(str, [
                    row['vcfname'], row['chrom'], row['chrom_length'],
                    row['largest_pb_length'], f"{row['coverage_pct']:.2f}",
                    row['num_variants'], row['variants_phased'],
                    f"{row['phasing_rate_pct']:.2f}",
                    f"{row['variants_per_mb']:.2f}",
                    row['pb_start'], row['pb_stop'], f"{row['pb_span_mb']:.2f}"
                ])) + '\n')
        
        # Write output file 3: Phase block statistics detail
        with open(output.block_stats, 'w') as f:
            f.write('\t'.join([
                'vcf_name', 'total_phase_blocks', 'mean_block_size', 'median_block_size',
                'block_n50', 'block_n90', 'block_n95', 'largest_block', 'smallest_block',
                'blocks_over_1mb', 'blocks_over_10mb', 'blocks_over_50mb',
                'total_bp_in_blocks', 'mean_variants_per_block', 'median_variants_per_block'
            ]) + '\n')
            
            for vcfname in config["VCF_NAMES"]:
                m = vcf_data[vcfname]
                # Calculate variant statistics per block
                chroms = m['chromosomes']
                variants_per_block = [c['num_phased'] for c in chroms.values()]
                mean_vars = sum(variants_per_block) / len(variants_per_block) if variants_per_block else 0
                median_vars = sorted(variants_per_block)[len(variants_per_block)//2] if variants_per_block else 0
                
                f.write('\t'.join(map(str, [
                    vcfname, m['total_phase_blocks'], int(m['mean_block_size']),
                    m['median_block_size'], m['block_n50'], m['block_n90'], m['block_n95'],
                    m['largest_block'], m['smallest_block'],
                    m['blocks_over_1mb'], m['blocks_over_10mb'], m['blocks_over_50mb'],
                    sum(m['all_phase_blocks']),
                    int(mean_vars), int(median_vars)
                ])) + '\n')
        
        # Write output file 4: VCF comparison (if multiple VCFs)
        if len(config["VCF_NAMES"]) > 1:
            with open(output.comparison, 'w') as f:
                f.write('\t'.join(['metric'] + config["VCF_NAMES"] + ['notes']) + '\n')
                
                metrics_to_compare = [
                    ('total_variants', 'Total variants in input VCF'),
                    ('total_phased', 'Variants successfully phased'),
                    ('overall_phasing_rate', 'Phasing success rate (%)'),
                    ('genome_coverage_pct', 'Genome covered by largest phase blocks (%)'),
                    ('block_n50', 'Phase block N50 (bp)'),
                    ('block_n90', 'Phase block N90 (bp)'),
                    ('largest_block', 'Largest single phase block (bp)'),
                    ('total_phase_blocks', 'Total number of phase blocks'),
                    ('mean_chrom_coverage', 'Mean per-chromosome coverage (%)'),
                    ('median_chrom_coverage', 'Median per-chromosome coverage (%)'),
                    ('chroms_over_90pct', 'Chromosomes with >90% coverage'),
                    ('mean_block_size', 'Mean phase block size (bp)'),
                    ('blocks_over_10mb', 'Phase blocks larger than 10 Mb')
                ]
                
                for metric_key, description in metrics_to_compare:
                    values = []
                    for vcfname in config["VCF_NAMES"]:
                        val = vcf_data[vcfname][metric_key]
                        if isinstance(val, float):
                            values.append(f"{val:.2f}")
                        else:
                            values.append(str(val))
                    
                    f.write('\t'.join([metric_key] + values + [description]) + '\n')
        else:
            # Single VCF, just note that comparison requires multiple VCFs
            with open(output.comparison, 'w') as f:
                f.write('# VCF comparison requires multiple VCF files\n')
                f.write('# Only one VCF file was processed in this run\n')